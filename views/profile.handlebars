<head>
	<link rel="stylesheet" type="text/css" href="assets/css/skeleton.css">
</head>


{{> navbar}}

<div class="container">
    <div class="row">
        <div class="four columns">

            <div class="panel panel-default">
                <div class="panel-body">

                    <div class="row">
                        <div class="six columns">
                             <img class="text-center" src="uploads/{{ data.image }}" width="200px" alt="">
                        </div>
                    </div>
                    <div class="row">
                        <div class="six columns">
                            <div>
                                <form enctype="multipart/form-data" action="/profile" method="POST">
                                    <input type="file" name="image">
                                    <input type="submit" value="Upload Picture">
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="six columns">
                             <h2 id="userNameLoginName">{{ data.name }}</h2>
                                <p>Austin, TX</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="12 columns">
                            <h5>Friends</h5>
                                     <div class="row">
                                        <div class="12 columns">
                                            {{#each data.friends}}
                                                <form style="float: left; margin-right: 10px;" action="/{{this.username}}" method="POST">
                                                    <input title="{{this.username}}" alt="Submit" id="image" type="image" src="uploads/{{this.image}}" width="75px" height="75px">
                                                </form>
                                            {{/each}}
                                        </div>
                                    </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="ten columns">
                            <h5>Friend Request</h5>
                                <ul class="people_list">
                                    {{#each data.profile }}
                                        <li>{{this.userA_username}}
                                            <div class="accept">
                                                <form action="/update/{{this.userA_id}}" method="POST">
                                                <input type="hidden" name="{{this.userA_id}}" value="true">
                                                <button type="submit">Accept</button>
                                                </form> 
                                            </div>
                                        </li>
                                    {{/each}}
                                </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="eight columns">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="twelve columns text-">
                            <h4>Your Meet Ups</h4>
                            <hr>
                              <div class="text-center twelve columns text-">
                                <h5>Tin's Special Meeting</h5>
                                    <div class="five columns thumbnail text-center">
                                        <img class="food preference-images img-responsive" data-name="Indian" id="Indian" data-state="unclicked" src="assets/img/indian.jpeg">
                                        <h3 class="food caption" data-name="Indian" data-state="unclicked" data-type="caption" id="captionIndian">Indian</h3>
                                    </div>
                                    <div class="five columns thumbnail text-center">
                                        <img class="food preference-images img-responsive" id="American" data-name="American" data-state="unclicked" src="assets/img/american.jpeg">
                                        <h3 class="food caption" data-name="American" data-state="unclicked" data-type="caption" id="captionAmerican">American</h3>
                                    </div>
                                    <div class="text-center twelve columns">
                                     <button class=" btn btn-site btn-lg pref-btn"><a style="color: inherit; text-decoration: none;" href="preferences.html">Go to Meet up Page</a></button>
                                    </div>
                            </div>
                          

                            <div class=" text-center twelve columns text-" style="padding-top: 80px;">

                                     <button class="btn btn-site btn-lg pref-btn"><a style="color: inherit; text-decoration: none;" href="/main">Create a New Meet Up</a></button>
                                      <button class="btn btn-site btn-lg pref-btn"><a style="color: inherit; text-decoration: none;" href="/main">Be a loner</a></button>
                            </div>    
      
                            
                            <br/>
                            
                           

                        </div>
                       
    
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



